{
  "schemaVersion": 1,
  "id": "sar",
  "version": "${version}",

  "name": "Some Assembly Required",
  "description": "A component and modifier system for modular items",
  "authors": [
    "SollyW"
  ],

  "license": "MIT",
  "icon": "assets/sar/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.immortaldevs.sar.base.Sar"
    ],
    "client": [
      "net.immortaldevs.sar.base.client.SarClient"
    ]
  },

  "mixins": [
    "sar.mixins.json"
  ],

  "depends": {
    "fabric": "*",
    "fabricloader": "*",
    "minecraft": "*",
    "java": ">=17"
  },

  "custom": {
    "disabled loom:injected_interfaces": {
      "net/minecraft/class_1799": ["net/immortaldevs/sar/base/ItemStackExt"],

      "net/minecraft/class_1087": ["net/immortaldevs/sar/base/client/BakedModelExt"],
      "net/minecraft/class_310": ["net/immortaldevs/sar/base/client/MinecraftClientExt"]
    }
  }
}
